{
  "name": "map-transform",
  "version": "0.3.0",
  "description": "Map and transform objects with mapping definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no>",
  "license": "ISC",
  "keywords": [
    "map",
    "transform",
    "javascript",
    "object",
    "path"
  ],
  "scripts": {
    "start": "tsc && node index.js",
    "test": "tsc && nyc --reporter=text-summary ava dist/**/*-test.js",
    "test:watch": "npm run dev",
    "dev": "ava --watch",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*-test.ts"
    ],
    "sources": [
      "src/**/!(*-test).ts"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*-test.js",
      "**/*-test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/integreat-io/map-transform.git"
  },
  "engines": {
    "node": ">= 8.6",
    "npm": ">= 5.4"
  },
  "bugs": {
    "url": "https://github.com/integreat-io/map-transform/issues"
  },
  "homepage": "https://github.com/integreat-io/map-transform#readme",
  "dependencies": {
    "@types/ramda": "^0.25.47",
    "ajv": "^6.7.0",
    "map-any": "^0.1.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/sinon": "^7.0.3",
    "ava": "^1.1.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "deep-freeze": "0.0.1",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  }
}
