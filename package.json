{
  "name": "map-transform",
  "version": "0.3.4",
  "description": "Map and transform objects with mapping definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no>",
  "license": "ISC",
  "keywords": [
    "map",
    "transform",
    "javascript",
    "object",
    "path"
  ],
  "scripts": {
    "start": "tsc && node index.js",
    "test": "tsc && nyc --reporter=text-summary ava dist/**/*.test.js",
    "test:watch": "npm run dev",
    "test:inspect": "node --inspect node_modules/ava/profile.js",
    "dev": "ava --watch",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "sources": [
      "src/**/!(*.test).ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "include": [
      "**/!(*.test).js",
      "**/!(*.test|*.d).ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/integreat-io/map-transform.git"
  },
  "engines": {
    "node": ">= 8.6",
    "npm": ">= 5.4"
  },
  "bugs": {
    "url": "https://github.com/integreat-io/map-transform/issues"
  },
  "homepage": "https://github.com/integreat-io/map-transform#readme",
  "dependencies": {
    "@types/ramda": "^0.26.8",
    "ajv": "^6.10.0",
    "map-any": "^0.1.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/sinon": "^7.0.11",
    "ava": "^1.4.1",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.3",
    "deep-freeze": "0.0.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5"
  }
}
